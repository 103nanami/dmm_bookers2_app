<main class="container">

  <div class="row"></div>

  <div class="row">

    <div class="col-lg-4">
      <%= render 'users/list', user: @user %>
    </div>

    <div class="col-lg-8">

      <h2>Users</h2>

      <table class="table">
          <thead>
            <tr>
              <th scope="col">image</th>
              <th scope="col">Name</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th scope="row"><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></th>
                <td> <%= user.name %></td>
                <td></td>
                <td>
                  <%= link_to user_path(user.id) do %>
                  Show
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>

</main>