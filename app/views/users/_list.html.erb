

  <div class="left_side">
    <div class="user_show">

      <h2>User info</h2>

      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col"><%= user.name %></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Introduction</td>
            <td><%= user.introduction %></td>
            <td></td>
          </tr>
        </tbody>
      </table>

      <div class="user_show_button">
        <div class="row">
          <%= link_to '',edit_user_path(current_user.id) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
      </div>

    </div>


    <div class="books_new">
      <div class="input_newbook">

  <h2>New book</h2>

  <%= form_with model: @book, local:true do |f| %>

    <div class="input_title">
      <label for="inputTitle">Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id:"inputTitle" ></input>
    </div>

    <div class="input_body">
      <label for="inputbody">Opinion</label>
      <textarea class="form-control book_body" name="book[body]"  id:"inputbody" ></textarea>
    </div>

    <%= f.submit 'Create Book',class: "btn btn btn-success" %>

  <% end %>

</div>
    </div>

  </div>

