    <h2>User info</h2>
      <table class="table">
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <tr>
            <th>Name</th>
            <th><%= user.name %></th>
          </tr>

          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>
      </table>

        <div class="row">
          <%= link_to '',edit_user_path(user.id) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>

        <h2>New book</h2>

        <%= form_with model: book, local:true do |f| %>

          <div class="form-group">
            <label for="inputTitle">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id:"inputTitle" ></input>
          </div>

          <div class="form-group">
            <label for="inputbody">Opinion</label>
            <textarea class="form-control book_body" name="book[body]"  id:"inputbody" ></textarea>
          </div>
          <div class="form-group">
          <%= f.submit 'Create Book',class: "btn btn btn-success" %>
          </div>
        <% end %>


