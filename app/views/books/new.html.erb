<h1>New book</h1>

<%= form_with model: @book, local:true do |f| %>

  <label for="inputTitle">Name</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>

  <label for="inputbody">Opinion</label>
  <%= f.text_area :body,  id:"inputbody" %>
  <%= f.submit 'Create Book' %>

<% end %>
