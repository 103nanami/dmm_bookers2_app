<div class="input_newbook">
  
  <h2>New book</h2>
  
  <%= form_with model: @book, local:true do |f| %>
  
    <div class="input_title">
      <label for="inputTitle">Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id:"inputTitle" ></input>
    </div>
  
    <div class="input_body">
      <label for="inputbody">Opinion</label>
      <textarea class="form-control book_body" name="book[body]"  id:"inputbody" ></textarea>
    </div>
  
    <div>
      <%= f.submit 'Create Book',class: "btn btn btn-success" %>
    </div>
  
  <% end %>

</div>
