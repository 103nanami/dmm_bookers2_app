  <div class="container">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error prohibited this obj.
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>

    <div class="row">

      <div class="col-md-5" style="margin:20px auto;">

        <h1>Editing Book</h1>

        <%= form_with model: @book, local:true do |f| %>

          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit 'Update Book',class: "btn btn btn-success" %>

        <% end %>


          <p class="link" style="display:block; margin:20px 0;">
          <%= link_to book_path(@book.id) do %> Show <% end %>
          |
          <%= link_to books_path do %> Back <% end %>
          </p>

      </div>

    </div>
  </div>